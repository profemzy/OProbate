@model WebApplication.ViewModels.StaffFormViewModel

@{
    ViewBag.Title = "Staff Form";
}

@using (Html.BeginForm("Save", "Staffs"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")

    <div class="form-group">
        @Html.LabelFor(m => m.Staff.Firstname)
        @Html.TextBoxFor(m => m.Staff.Firstname, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Staff.Firstname)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Staff.Lastname)
        @Html.TextBoxFor(m => m.Staff.Lastname, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Staff.Lastname)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Staff.DepartmentId)
        @Html.DropDownListFor(m => m.Staff.DepartmentId, new SelectList(Model.Departments, "Id", "Name"), "Select Department", new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Staff.DepartmentId)
    </div>

    @Html.HiddenFor(m => m.Staff.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
